@using ShoppingList.Models
@model ShoppingList.Models.ShoppingListPageViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Your Lists</h2>

<p class="table">
    <button class="btn btn-primary btn-sm">@Html.ActionLink("Create a New List", "Create", "ShoppingList", null, new { style = "color:white" })</button>
</p>

<hr style="border: 1px solid black" />

@{ Html.BeginForm("DeleteChecked", "ShoppingListItem", FormMethod.Post, new { Name = "table" });}
<table class="table">
    <tr style="background-color: #5bc0de; border: 1px solid black;">
        <th style="border: 1px solid black; text-align: left" class="col-sm-10">
            @Html.ActionLink("Name (click to sort)", "Index", new { SortOption = Model.Criteria.SortOption == ShoppingListSortOption.NameAsc ? ShoppingListSortOption.NameDesc : ShoppingListSortOption.NameAsc }, new { style="color:black",})
        </th>
        <th style="border: 1px solid black; text-align: center" class="col-sm-2">
            Options
        </th>
    </tr>

    @foreach (var item in Model.Lists)
    {
        <tr>
            <td style="border: 1px solid black; background-color: @item.Color">
                @Html.ActionLink(item.ListName, "ItemIndex", "ShoppingListItem", new { id = item.ListId }, new { style = "font-weight:bold" })
            </td>
            <td style="border: 1px solid black; text-align: center">
                <div class="btn-group btn-group-xs">
                        <button type="button">@Html.ActionLink("Show", "ItemIndex", "ShoppingListItem", new { id = item.ListId }, null)</button> 
                        <button type="button" style="background-color:#fb7470">@Html.ActionLink("Delete", "Delete", new { id = item.ListId }, new { style = "color:black",})</button>
                </div>
            </td>
        </tr>
    }
</table>


